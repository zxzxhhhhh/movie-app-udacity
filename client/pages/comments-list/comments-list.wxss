/* pages/comments-list/comments-list.wxss */

Page{
  background-color: rgba(0, 0, 0, 0.02)
}
.comment-card{
  width: 100%;
  box-sizing: border-box;
  margin: 5rpx 0rpx;
  background: white;
  padding: 20rpx 0;
}
.comment-card:first-child{
  margin-top: 50rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 10rpx 10rpx 10rpx 30rpx;
}
.username{
  font-size: 30rpx;
  line-height: 42rpx;
}
.content{
  width: 690rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 30rpx;
  /** 文字强制只显示1行，多余的用...表示*/
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.voices{
  position: relative;
  width: 300rpx;
  height: 50rpx;
  background: lightgray;
  margin-left:30rpx;
  margin-top: 20rpx;

  display: flex;
  align-items: center;
}
.play-status{
  position: absolute;
  left: 30rpx;
  top: 5rpx;
  
  background: white;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;

  text-align: center;
  font-size: 40rpx;
  line-height: 40rpx;
  justify-self: center;
  align-self: center;
}
.audio-length{
  position: absolute;
  left: 80rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.btn-bottom{
  width: 750rpx;
  height: 100rpx;

  position: absolute;
  bottom: 0;

  background: white;
  opacity: 0.6;

  font-size: 35rpx;
  line-height: 100rpx;

  text-align: center;
}